<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="MBox">
        <createTable tableName="ITEM_PISITIONS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ITEM_PISITIONS"/>
            </column>
            <column name="ITEM_NAME" type="CLOB"/>
            <column name="ITEM_TOTAL_COUNT" type="INT"/>
            <column name="ITRM_PRISE_FOR_ONE" type="INT"/>
            <column name="ITEM_COMPANY" type="VARCHAR(255)"/>
            <column name="ITEM_COMPANY_ADDRESS" type="CLOB"/>
            <column name="ITEM_WEARHOME_ADDRESS" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="MBox">
        <createTable tableName="USER_ORDER_DETAIL">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_ORDER_DETAIL"/>
            </column>
            <column name="ORDER_DATE_TIME" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="ORDER_NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="MBox">
        <createTable tableName="USER_ORDER_DETAIL_ITEM_POS">
            <column name="ITEM_PISITIONS_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_ORDER_DETAIL_ITEM_POS"/>
            </column>
            <column name="USER_ORDER_DETAIL_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_ORDER_DETAIL_ITEM_POS"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="MBox">
        <addForeignKeyConstraint baseColumnNames="ITEM_PISITIONS_ID" baseTableName="USER_ORDER_DETAIL_ITEM_POS"
                                 constraintName="FK_USEORDDETIT_ON_ITEMPISITIO" referencedColumnNames="ID"
                                 referencedTableName="ITEM_PISITIONS"/>
    </changeSet>
    <changeSet id="5" author="MBox">
        <addForeignKeyConstraint baseColumnNames="USER_ORDER_DETAIL_ID" baseTableName="USER_ORDER_DETAIL_ITEM_POS"
                                 constraintName="FK_USEORDDETIT_ON_USERORDERDE" referencedColumnNames="ID"
                                 referencedTableName="USER_ORDER_DETAIL"/>
    </changeSet>
</databaseChangeLog>