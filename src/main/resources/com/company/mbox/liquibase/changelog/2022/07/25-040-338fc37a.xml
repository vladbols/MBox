<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="MBox">
        <addColumn tableName="ORDER_">
            <column name="NUMBER_" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="MBox" dbms="postgresql">
        <createIndex indexName="IDX_UC_ORDER__NUMBER_" tableName="ORDER_" unique="true">
            <column name="NUMBER_"/>
        </createIndex>

        <modifySql>
            <append value="where DELETED_DATE is null"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>