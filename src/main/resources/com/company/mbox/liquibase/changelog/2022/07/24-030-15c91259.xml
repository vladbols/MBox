<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="MBox">
        <addColumn tableName="ORDER_">
            <column name="COMMENT_" type="CLOB"/>
            <column name="DATETIME" type="DATETIME"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="MBox">
        <addColumn tableName="ORGANIZATION">
            <column name="CONTACTS" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="MBox">
        <dropColumn columnName="name" tableName="order_"/>
    </changeSet>
    <changeSet id="4" author="MBox">
        <addNotNullConstraint columnDataType="UUID" columnName="ITEM_ID" tableName="ORDER_ITEM" validate="true"/>
    </changeSet>
</databaseChangeLog>