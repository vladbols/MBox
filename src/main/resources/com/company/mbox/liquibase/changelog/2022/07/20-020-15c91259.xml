<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="MBox">
        <createTable tableName="ORDER_ITEM">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ORDER_ITEM"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="ITEM_ID" type="UUID"/>
            <column name="AMOUNT" type="DOUBLE"/>
            <column name="ORDER_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="MBox">
        <createIndex indexName="IDX_ORDERGROUP_ORDER_ID" tableName="ORDER_ITEM">
            <column name="ORDER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ORDER_ID" baseTableName="ORDER_ITEM"
                                 constraintName="FK_ORDER_ITEM_ON_ORDER" referencedColumnNames="ID"
                                 referencedTableName="ORDER_"/>
    </changeSet>
    <changeSet id="3" author="MBox">
        <addForeignKeyConstraint baseColumnNames="ITEM_ID" baseTableName="ORDER_ITEM"
                                 constraintName="FK_ORDER_ITEM_ON_ITEM" referencedColumnNames="ID"
                                 referencedTableName="ITEM"/>
    </changeSet>
    <changeSet id="4" author="MBox">
        <dropForeignKeyConstraint baseTableName="order_group_item_link" constraintName="fk_ordgroite_on_item"/>
    </changeSet>
    <changeSet id="5" author="MBox">
        <dropForeignKeyConstraint baseTableName="order_group_item_link" constraintName="fk_ordgroite_on_order_group"/>
    </changeSet>
    <changeSet id="6" author="MBox">
        <dropForeignKeyConstraint baseTableName="order_order_group_link" constraintName="fk_ordordgro_on_order"/>
    </changeSet>
    <changeSet id="7" author="MBox">
        <dropForeignKeyConstraint baseTableName="order_order_group_link" constraintName="fk_ordordgro_on_order_group"/>
    </changeSet>
    <changeSet id="8" author="MBox">
        <dropTable cascadeConstraints="true" tableName="order_group"/>
    </changeSet>
    <changeSet id="9" author="MBox">
        <dropTable cascadeConstraints="true" tableName="order_group_item_link"/>
    </changeSet>
    <changeSet id="10" author="MBox">
        <dropTable cascadeConstraints="true" tableName="order_order_group_link"/>
    </changeSet>
</databaseChangeLog>