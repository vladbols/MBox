<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="MBox">
        <createTable tableName="SELECTED_POSITIONS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SELECTED_POSITIONS"/>
            </column>
            <column name="SELECTED_POSITION_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="POSITION_COUNT" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="MBox">
        <createIndex indexName="IDX_SELECTEDPOSITIONS" tableName="SELECTED_POSITIONS">
            <column name="SELECTED_POSITION_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="SELECTED_POSITION_ID" baseTableName="SELECTED_POSITIONS"
                                 constraintName="FK_SELECTEDPOS_ON_SELECTEDPOS" referencedColumnNames="ID"
                                 referencedTableName="MAIN_TABLE"/>
    </changeSet>
</databaseChangeLog>