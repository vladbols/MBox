<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="MBox">
        <addColumn tableName="USER_ORDER_DETAIL">
            <column name="ORDER_DATE_TIME" type="DATETIME"/>
        </addColumn>

        <addNotNullConstraint columnName="ORDER_DATE_TIME" defaultNullValue="${localDateTime.defaultValue}"
                              tableName="USER_ORDER_DETAIL"/>
    </changeSet>
    <changeSet id="2" author="MBox">
        <dropForeignKeyConstraint baseTableName="USER_ORDER" constraintName="FK_USER_ORDER_ON_ORDER_DET"/>
    </changeSet>
    <changeSet id="3" author="MBox">
        <dropTable cascadeConstraints="true" tableName="USER_ORDER"/>
    </changeSet>
</databaseChangeLog>