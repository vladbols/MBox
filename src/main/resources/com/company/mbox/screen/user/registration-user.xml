<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://registration.screen.caption"
        focusComponent="userForm">
    <actions>
        <action id="commit"
                caption="msg://registrationButton"
                icon="CHECK"
                shortcut="ENTER"/>
        <action id="signIn"
                caption="msg://loginButton"
                icon="SIGN_IN"/>
    </actions>
    <layout spacing="true" expand="loginWrapper">
        <vbox id="loginWrapper" width="100%">
            <vbox id="loginMainBox"
                  align="MIDDLE_CENTER"
                  margin="true"
                  spacing="true"
                  stylename="jmix-login-panel"
                  width="AUTO">
            <label id="welcomeLabel"
                   align="MIDDLE_CENTER"
                   stylename="jmix-login-caption"
                   value="msg://welcomeLabel"/>

                <vbox id="registrationVbox" spacing="true" align="MIDDLE_CENTER">
                    <form id="userForm" align="MIDDLE_CENTER">
                        <column width="350px">
                            <textField id="usernameField" datatype="string" caption="msg://field.username"/>
<!--                            <capsLockIndicator id="capsLockIndicator" align="MIDDLE_CENTER" capsLockOnMessage="ON"/>-->
                            <passwordField id="passwordField"
                                           caption="msg://field.password"/>
<!--                            <capsLockIndicator id="capsLock2" align="MIDDLE_CENTER" capsLockOnMessage="ON"/>-->
                            <passwordField id="confirmPasswordField"
                                           caption="msg://field.confirm.password"/>
                            <textField id="firstNameField" datatype="string" caption="msg://field.name"/>
                            <textField id="lastNameField" datatype="string" caption="msg://field.surname"/>
                            <textField id="emailField" datatype="string" caption="msg://field.email"/>
                            <textField id="iinField" maxLength="12" caption="msg://field.iin"/>
                            <checkBox id="hasOrganizationField" caption="msg://field.has.organization"/>
                            <textField id="binField" maxLength="12" caption="msg://field.organization.bin"/>
                        </column>
                    </form>
                    <form id="organizationForm" captionPosition="TOP">
                        <column width="350px">
                            <textField id="orgNameField"
                                       caption="msg://field.organization.name"/>
                            <textField id="orgAddressField"
                                       caption="msg://field.organization.address"/>
                        </column>
                        <column width="350px">
                            <textField id="orgFactAddressField" maxLength="12"
                                       caption="msg://field.organization.fact.address"/>
                            <textField id="orgBinField" maxLength="12"
                                       caption="msg://field.organization.bin"/>
                            <textField id="orgKbeField"
                                       caption="msg://field.organization.kbe"/>
                        </column>
                        <column width="350px">
                            <textField id="orgIIKField"
                                       caption="msg://field.organization.iik"/>
                            <textField id="orgBikField"
                                       caption="msg://field.organization.bik"/>
                        </column>
                    </form>
                    <button id="commitAndOpenLoginPageBtn"
                            action="commit"
                            css="max-width:350px;"
                            align="MIDDLE_CENTER"
                            stylename="jmix-login-submit-button"/>
                    <button id="openLoginPageBtn"
                            action="signIn"
                            align="MIDDLE_CENTER"
                            stylename="borderless-colored"/>
                </vbox>
            </vbox>
        </vbox>
    </layout>
</window>
