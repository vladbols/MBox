<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://orderEdit.caption"
        focusComponent="form">
    <data>
        <instance id="orderDc"
                  class="com.company.mbox.entity.Order">
            <fetchPlan extends="_base">
                <property name="item" fetchPlan="_base">
                    <property name="warehouse" fetchPlan="_base">
                        <property name="division" fetchPlan="_base">
                            <property name="provider" fetchPlan="_base">
                                <property name="currency" fetchPlan="_base"/>
                            </property>
                        </property>
                    </property>
                    <property name="unit" fetchPlan="_base"/>
                </property>
                <property name="user" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="itemDc" property="item"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="orderDc">
            <column width="350px">
                <entityPicker id="userField" property="user">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <textField id="amountField" property="amount"/>
            </column>
        </form>
        <groupBox id="itemBox" caption="msg://com.company.mbox.entity/Order.item">
            <table id="itemTable" dataContainer="itemDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="legacyId"/>
                    <column id="type"/>
                    <column id="prise"/>
                    <column id="amount"/>
                    <column id="warehouse"/>
                    <column id="unit"/>
                </columns>
                <buttonsPanel>
                    <button action="itemTable.add"/>
                    <button action="itemTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
