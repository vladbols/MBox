<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://orderEdit.caption"
        focusComponent="form">
    <data>
        <instance id="orderDc"
                  class="com.company.mbox.entity.Order">
            <fetchPlan extends="_base">
                <property name="orderDetail" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="orderDetailDc" property="orderDetail"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="orderDc">
            <column width="350px">
                <textField id="orderNameField" property="orderName"/>
                <dateField id="orderDateField" property="orderDate"/>
            </column>
        </form>
        <groupBox id="orderDetailBox" caption="msg://com.company.mbox.entity/Order.orderDetail">
            <table id="orderDetailTable" dataContainer="orderDetailDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="itemName"/>
                    <column id="priseForOne"/>
                    <column id="totalCount"/>
                    <column id="company"/>
                    <column id="companyAddres"/>
                    <column id="wearhouseAddress"/>
                    <column id="countForUser"/>
                </columns>
                <buttonsPanel>
                    <button action="orderDetailTable.create"/>
                    <button action="orderDetailTable.edit"/>
                    <button action="orderDetailTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
