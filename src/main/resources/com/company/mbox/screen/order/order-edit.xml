<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://orderEdit.caption"
        focusComponent="form">
    <data>
        <instance id="orderDc"
                  class="com.company.mbox.entity.Order">
            <fetchPlan extends="_base">
                <property name="orderGroupId" fetchPlan="_base">
                    <property name="item" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader/>
            <collection id="orderGroupIdDc" property="orderGroupId"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="orderDc">
            <column width="350px">
            </column>
        </form>
        <groupBox id="orderGroupIdBox" caption="msg://com.company.mbox.entity/Order.orderGroupId">
            <table id="orderGroupIdTable" dataContainer="orderGroupIdDc" width="100%" height="200px"
            >
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="name"
                            caption="&#1053;&#1072;&#1080;&#1084;&#1077;&#1085;&#1086;&#1074;&#1072;&#1085;&#1080;&#1077;"/>
                    <column id="amount"
                            caption="&#1050;&#1086;&#1083;&#1080;&#1095;&#1077;&#1089;&#1090;&#1074;&#1086;"/>
                </columns>
                <buttonsPanel>
                    <button action="orderGroupIdTable.add"
                            caption="&#1044;&#1086;&#1073;&#1072;&#1074;&#1080;&#1090;&#1100;"/>
                    <button action="orderGroupIdTable.exclude"
                            caption="&#1059;&#1076;&#1072;&#1083;&#1080;&#1090;&#1100;"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"
                    caption="&#1057;&#1086;&#1093;&#1088;&#1072;&#1085;&#1080;&#1090;&#1100; &#1080; &#1079;&#1072;&#1082;&#1088;&#1099;&#1090;&#1100;"/>
            <button id="closeBtn" action="windowClose" caption="&#1054;&#1090;&#1084;&#1077;&#1085;&#1072;"/>
        </hbox>
    </layout>
</window>
