<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://itemBrowse.caption"
        focusComponent="itemsTable">
    <data readOnly="true">
        <collection id="itemsDc"
                    class="com.company.mbox.entity.Item">
            <fetchPlan extends="_base">
                <property name="unit" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="itemsDl">
                <query>
                    <![CDATA[select e from Item e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="itemsTable" spacing="true">
        <filter id="filter"
                dataLoader="itemsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="itemsTable"
                    width="100%"
                    dataContainer="itemsDc"
                    caption="&#1057;&#1087;&#1080;&#1089;&#1086;&#1082; &#1090;&#1086;&#1074;&#1072;&#1088;&#1086;&#1074;">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"
                        caption="&#1053;&#1072;&#1080;&#1084;&#1077;&#1085;&#1086;&#1074;&#1072;&#1085;&#1080;&#1077;"/>
                <column id="prise" caption="&#1062;&#1077;&#1085;&#1072;"/>
                <column id="unit.name"
                        caption="&#1045;&#1076;. &#1048;&#1079;&#1084;&#1077;&#1088;&#1077;&#1085;&#1080;&#1103;"/>
                <column id="warehouse.address" caption="&#1040;&#1076;&#1088;&#1077;&#1089;"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="itemsTable.create"/>
                <button id="editBtn" action="itemsTable.edit"/>
                <button id="removeBtn" action="itemsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
