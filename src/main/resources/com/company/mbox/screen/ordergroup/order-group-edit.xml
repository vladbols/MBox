<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://orderGroupEdit.caption"
        focusComponent="form">
    <data>
        <instance id="orderGroupDc"
                  class="com.company.mbox.entity.OrderGroup">
            <fetchPlan extends="_base">
                <property name="item" fetchPlan="_base">
                    <property name="warehouse" fetchPlan="_base">
                        <property name="division" fetchPlan="_base">
                            <property name="organization" fetchPlan="_base">
                                <property name="currency" fetchPlan="_base"/>
                            </property>
                        </property>
                    </property>
                    <property name="unit" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader/>
            <collection id="itemDc" property="item"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="orderGroupDc">
            <column width="350px">
                <textField id="amountField" property="amount"
                           caption="&#1050;&#1086;&#1083;&#1080;&#1095;&#1077;&#1089;&#1090;&#1074;&#1086;"/>
            </column>
        </form>
        <groupBox id="itemBox" caption="msg://com.company.mbox.entity/OrderGroup.item">
            <table id="itemTable" dataContainer="itemDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="name"
                            caption="&#1053;&#1072;&#1080;&#1084;&#1077;&#1085;&#1086;&#1074;&#1072;&#1085;&#1080;&#1077;"/>
                    <column id="type" caption="&#1058;&#1080;&#1087;"/>
                    <column id="prise" caption="&#1062;&#1077;&#1085;&#1072;"/>
                    <column id="unit" caption="&#1045;&#1076;. &#1080;&#1079;&#1084;."/>
                    <column id="warehouse.address" caption="&#1040;&#1076;&#1088;&#1077;&#1089;"/>
                </columns>
                <buttonsPanel>
                    <button action="itemTable.add"
                            caption="&#1044;&#1086;&#1073;&#1072;&#1074;&#1080;&#1090;&#1100; &#1074; &#1089;&#1087;&#1080;&#1089;&#1082;"/>
                    <button action="itemTable.exclude"
                            caption="&#1059;&#1076;&#1072;&#1083;&#1080;&#1090;&#1100; &#1080;&#1079; &#1089;&#1087;&#1080;&#1089;&#1082;&#1072;"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"
                    caption="&#1057;&#1086;&#1093;&#1088;&#1072;&#1085;&#1080;&#1090;&#1100; &#1080; &#1079;&#1072;&#1082;&#1088;&#1099;&#1090;&#1100;"/>
            <button id="closeBtn" action="windowClose" caption="&#1054;&#1090;&#1084;&#1077;&#1085;&#1072;"/>
        </hbox>
    </layout>
</window>
