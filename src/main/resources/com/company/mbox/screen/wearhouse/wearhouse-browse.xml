<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://wearhouseBrowse.caption"
        focusComponent="wearhousesTable">
    <data readOnly="true">
        <collection id="wearhousesDc"
                    class="com.company.mbox.entity.Wearhouse">
            <fetchPlan extends="_base">
                <property name="division" fetchPlan="_base">
                    <property name="provider" fetchPlan="_base">
                        <property name="currency" fetchPlan="_base"/>
                    </property>
                </property>
            </fetchPlan>
            <loader id="wearhousesDl">
                <query>
                    <![CDATA[select e from Wearhouse e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="wearhousesTable" spacing="true">
        <filter id="filter"
                dataLoader="wearhousesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="wearhousesTable"
                    width="100%"
                    dataContainer="wearhousesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="legacyId"/>
                <column id="name"/>
                <column id="address"/>
                <column id="division"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="wearhousesTable.create"/>
                <button id="editBtn" action="wearhousesTable.edit"/>
                <button id="removeBtn" action="wearhousesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
