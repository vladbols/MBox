<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://userOrderDetailEdit.caption"
        focusComponent="form">
    <data>
        <instance id="userOrderDetailDc"
                  class="com.company.mbox.entity.UserOrderDetail">
            <fetchPlan extends="_base">
                <property name="orderItems" fetchPlan="_base">
                    <property name="userOrderDetails" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader/>
            <collection id="orderItemsDc" property="orderItems"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="userOrderDetailDc">
            <column width="350px">
                <textField id="orderNameField" property="orderName"/>
            </column>
        </form>
        <groupBox id="orderItemsBox" caption="msg://com.company.mbox.entity/UserOrderDetail.orderItems">
            <table id="orderItemsTable" dataContainer="orderItemsDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="itemName"/>
                    <column id="itemTotalCount"/>
                    <column id="itrmPriseForOne"/>
                    <column id="itemCompany"/>
                    <column id="itemCompanyAddress"/>
                    <column id="itemWearhomeAddress"/>
                </columns>
                <buttonsPanel>
                    <button action="orderItemsTable.add"/>
                    <button action="orderItemsTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
