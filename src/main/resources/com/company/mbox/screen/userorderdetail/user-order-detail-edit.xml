<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://userOrderDetailEdit.caption"
        focusComponent="form">
    <data>
        <instance id="userOrderDetailDc"
                  class="com.company.mbox.entity.UserOrderDetail">
            <fetchPlan extends="_base">
                <property name="orderItems" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="orderItemsDc" property="orderItems"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="userOrderDetailDc">
            <column width="350px">
                <dateField id="orderDateTimeField" property="orderDateTime" caption="&#1044;&#1072;&#1090;&#1072;"/>
                <textField id="orderNameField" property="orderName"
                           caption="&#1053;&#1072;&#1080;&#1084;&#1077;&#1085;&#1086;&#1074;&#1072;&#1085;&#1080;&#1077; &#1079;&#1072;&#1082;&#1072;&#1079;&#1072;"/>
            </column>
        </form>
        <groupBox id="orderItemsBox" caption="msg://com.company.mbox.entity/UserOrderDetail.orderItems">
            <table id="orderItemsTable" dataContainer="orderItemsDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="itemName"
                            caption="&#1053;&#1072;&#1080;&#1084;&#1077;&#1085;&#1086;&#1074;&#1072;&#1085;&#1080;&#1077;"/>
                    <column id="itemCompany"
                            caption="&#1050;&#1086;&#1084;&#1087;&#1072;&#1085;&#1080;&#1103; &#1087;&#1086;&#1089;&#1090;&#1072;&#1074;&#1097;&#1080;&#1082;"/>
                    <column id="itemWearhomeAddress"
                            caption="&#1040;&#1076;&#1088;&#1077;&#1089; &#1089;&#1082;&#1083;&#1072;&#1076;&#1072;"/>
                </columns>
                <buttonsPanel>
                    <button action="orderItemsTable.add"
                            caption="&#1044;&#1086;&#1073;&#1072;&#1074;&#1080;&#1090;&#1100; &#1074; &#1089;&#1087;&#1080;&#1089;&#1086;&#1082;"/>
                    <button action="orderItemsTable.exclude"
                            caption="&#1059;&#1076;&#1072;&#1083;&#1080;&#1090;&#1100; &#1080;&#1079; &#1089;&#1087;&#1080;&#1089;&#1082;&#1072;"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"
                    caption="&#1057;&#1086;&#1093;&#1088;&#1072;&#1085;&#1080;&#1090;&#1100; &#1080; &#1079;&#1072;&#1082;&#1088;&#1099;&#1090;&#1100;"/>
            <button id="closeBtn" action="windowClose" caption="&#1047;&#1072;&#1082;&#1088;&#1099;&#1090;&#1100;"/>
        </hbox>
    </layout>
</window>
