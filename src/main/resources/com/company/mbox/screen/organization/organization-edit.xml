<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://organizationEdit.caption"
        focusComponent="form">
    <data>
        <instance id="organizationDc"
                  class="com.company.mbox.entity.Organization">
            <fetchPlan extends="_base">
                <property name="currency" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="organizationDc">
                <column width="350px">
                    <textField id="legacyIdField" property="legacyId"/>
                    <textArea id="nameField" property="name" rows="5"/>
                    <textField id="binField" property="bin"/>
                    <dateField id="dateField" property="date"/>
                    <textArea id="addressField" property="address" rows="5"/>
                    <textField id="accountField" property="account"/>
                    <textField id="kbeField" property="kbe"/>
                    <textField id="bikField" property="bik"/>
                    <textField id="bankField" property="bank"/>
                    <entityPicker id="currencyField" property="currency">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <checkBox id="activeField" property="active"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
