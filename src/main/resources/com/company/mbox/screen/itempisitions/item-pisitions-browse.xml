<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://itemPisitionsBrowse.caption"
        focusComponent="itemPisitionsesTable">
    <data readOnly="true">
        <collection id="itemPisitionsesDc"
                    class="com.company.mbox.entity.ItemPisitions">
            <fetchPlan extends="_base"/>
            <loader id="itemPisitionsesDl">
                <query>
                    <![CDATA[select e from ItemPisitions e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="itemPisitionsesTable" spacing="true">
        <filter id="filter"
                dataLoader="itemPisitionsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="itemPisitionsesTable"
                    width="100%"
                    dataContainer="itemPisitionsesDc" multiselect="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="itemName"
                        caption="&#1053;&#1072;&#1080;&#1084;&#1077;&#1085;&#1086;&#1074;&#1072;&#1085;&#1080;&#1077;"/>
                <column id="itrmPriseForOne"
                        caption="&#1062;&#1077;&#1085;&#1072; &#1079;&#1072; &#1077;&#1076;&#1077;&#1085;&#1080;&#1094;&#1091;"/>
                <column id="itemCompany"
                        caption="&#1050;&#1086;&#1084;&#1087;&#1072;&#1085;&#1080;&#1103; &#1087;&#1086;&#1089;&#1090;&#1072;&#1074;&#1097;&#1080;&#1082;&#1072;"/>
                <column id="itemCompanyAddress"
                        caption="&#1040;&#1076;&#1088;&#1077;&#1089; &#1082;&#1086;&#1084;&#1087;&#1072;&#1085;&#1080;&#1080; &#1087;&#1086;&#1089;&#1090;&#1072;&#1074;&#1097;&#1080;&#1082;&#1072;"/>
                <column id="itemWearhomeAddress"
                        caption="&#1040;&#1076;&#1088;&#1077;&#1089; &#1089;&#1082;&#1083;&#1072;&#1076;&#1072;"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="itemPisitionsesTable.create"
                        caption="&#1057;&#1086;&#1079;&#1076;&#1072;&#1090;&#1100;"/>
                <button id="editBtn" action="itemPisitionsesTable.edit"
                        caption="&#1056;&#1077;&#1076;&#1072;&#1082;&#1090;&#1080;&#1088;&#1086;&#1074;&#1072;&#1090;&#1100;"/>
                <button id="removeBtn" action="itemPisitionsesTable.remove"
                        caption="&#1059;&#1076;&#1072;&#1083;&#1080;&#1090;&#1100;"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
