<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://itemPisitionsEdit.caption"
        focusComponent="form">
    <data>
        <instance id="itemPisitionsDc"
                  class="com.company.mbox.entity.ItemPisitions">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="itemPisitionsDc"
        >
            <column width="350px">
                <textArea id="itemNameField" property="itemName" rows="5"
                          caption="&#1053;&#1072;&#1080;&#1084;&#1077;&#1085;&#1086;&#1074;&#1072;&#1085;&#1080;&#1077;"/>
                <textField id="itemTotalCountField" property="itemTotalCount"
                           caption="&#1050;&#1086;&#1083;&#1080;&#1095;&#1077;&#1089;&#1090;&#1074;&#1086; &#1085;&#1072; &#1089;&#1082;&#1083;&#1072;&#1076;&#1077;"/>
                <textField id="itrmPriseForOneField" property="itrmPriseForOne"
                           caption="&#1062;&#1077;&#1085;&#1072; &#1079;&#1072; &#1077;&#1076;&#1077;&#1085;&#1080;&#1094;&#1091;"/>
                <textField id="itemCompanyField" property="itemCompany"
                           caption="&#1050;&#1086;&#1084;&#1087;&#1072;&#1085;&#1080;&#1103;"/>
                <textArea id="itemCompanyAddressField" property="itemCompanyAddress" rows="5"
                          caption="&#1040;&#1076;&#1088;&#1077;&#1089; &#1082;&#1086;&#1084;&#1087;&#1072;&#1085;&#1080;&#1080;"/>
                <textArea id="itemWearhomeAddressField" property="itemWearhomeAddress" rows="5"
                          caption="&#1040;&#1076;&#1088;&#1077;&#1089; &#1089;&#1082;&#1083;&#1072;&#1076;&#1072;"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"
                    caption="&#1057;&#1086;&#1093;&#1088;&#1072;&#1085;&#1080;&#1090;&#1100; &#1080; &#1079;&#1072;&#1082;&#1088;&#1099;&#1090;&#1100;"/>
            <button id="closeBtn" action="windowClose" caption="&#1047;&#1072;&#1082;&#1088;&#1099;&#1090;&#1100;"/>
        </hbox>
    </layout>
</window>
